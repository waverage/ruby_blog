<!DOCTYPE html>
<html>
    <head>
        <title><%= t('common.app_name') %></title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item <%= 'active' if current_page?(root_path) || current_page?(posts_path) %>">
                        <a class="nav-link" href="<%= root_path %>"><%= t('posts.name') %></a>
                    </li>
                    <% Category.order(:name).roots.each do |category| %>
                        <li class="nav-item <%= 'active' if current_page?(category_path(category)) %>">
                            <%= link_to category.name, category, class: 'nav-link' %>
                        </li>
                    <% end %>
                </ul>
                <%= link_to t('posts.create'), new_post_path, class: 'btn btn-outline-primary pull-xs-right' %>
            </nav>
        </div>

        <div class="container main">
            <div class="row">
                <div class="col-md-12">
                    <% flash.each do |name, message| %>
                        <div class="alert alert-<%= name %>">
                            <%= message %>
                        </div>
                    <% end %>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-9">
                    <%= yield %>
                </div>
                <div class="col-md-3">
                    <%= render 'shared/submenu' %>
                   <div class="tag_cloud">
                        <h2>Теги</h2>
                        <% tag_cloud(Tag.counts, %w{ tag1 tag2 tag3 tag4 tag5 }) do |tag, css_class| %>
                            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
                        <% end %>
                   </div>
                </div>
            </div>

        </div>
    </body>
</html>
